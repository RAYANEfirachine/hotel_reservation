{% extends 'base.html.twig' %}

{% block title %}Edit Room #{{ room.numRoom }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/edit_room.css') }}">
{% endblock %}

{% block body %}
<div class="edit-page-wrapper">
    <div class="form-container">
        <header class="form-header">
            <h1>Refine Room Details</h1>
            <p>Modify the attributes of Room #{{ room.numRoom }} to maintain hotel excellence.</p>
        </header>

        {{ form_start(form) }}
            <div class="form-group-custom">
                {{ form_label(form.numRoom, 'Room Number') }}
                {{ form_widget(form.numRoom) }}
            </div>

            <div class="form-group-custom">
                {{ form_label(form.roomType, 'Category & Tier') }}
                {{ form_widget(form.roomType) }}
            </div>

            {# إذا كان لديك حقل للحالة (Status) أضفه هنا #}
            {% if form.status is defined %}
            <div class="form-group-custom">
                {{ form_label(form.status, 'Operational Status') }}
                {{ form_widget(form.status) }}
            </div>
            {% endif %}

            <div class="action-area">
                <button type="submit" class="btn-update">Save Changes</button>
                <a href="{{ path('admin_room_index') }}" class="btn-back">Cancel</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
