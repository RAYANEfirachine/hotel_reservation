{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
    <div class="container container-max">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h1 class="h3">Rooms</h1>
                <p class="text-muted mb-0">Manage room inventory and status.</p>
            </div>
            <a class="btn btn-primary" href="{{ path('admin_room_new') }}">New Room</a>
        </div>

        <div class="card">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Number</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for r in rooms %}
                        <tr>
                            <td>{{ r.id }}</td>
                            <td>{{ r.roomNumber }}</td>
                            <td>{{ r.roomType.type }}</td>
                            <td>{{ r.status }}</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary me-2" href="{{ path('admin_room_edit', {'id': r.id}) }}">Edit</a>
                                <form method="post" action="{{ path('admin_room_delete', {'id': r.id}) }}" style="display:inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ r.id) }}">
                                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="5"><div class="empty-state">No rooms yet.</div></td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
