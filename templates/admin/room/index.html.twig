{% extends 'base.html.twig' %}

{% block title %}Room Inventory{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/rooms_inventory.css') }}">
    <style>
        /* إضافة تنسيقات سريعة للصورة لضمان المظهر الفاخر */
        .room-thumb {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid #eee;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        .no-image-placeholder {
            width: 50px;
            height: 50px;
            background: #f5f5f5;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.6rem;
            color: #ccc;
            border: 1px dashed #ddd;
        }
    </style>
{% endblock %}

{% block body %}
<div class="rooms-page">
    <div class="rooms-header">
        <div>
            <h1>Room Inventory</h1>
            <p style="color: #888; margin-top: 5px;">Manage and monitor all hotel accommodation units.</p>
        </div>
        <a class="btn-add-room" href="{{ path('admin_room_new') }}">+ Register New Room</a>
    </div>

    <div class="inventory-card">
        <table class="rooms-table">
            <thead>
                <tr>
                    <th>Preview</th> {# العمود الجديد #}
                    <th>Ref ID</th>
                    <th>Room Number</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th style="text-align: right;">Management Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for r in rooms %}
                <tr>
                    {# قسم عرض الصورة #}
                    <td>
                        {% if r.image %}
                            <img src="{{ asset('uploads/rooms/' ~ r.image) }}" class="room-thumb" alt="Unit {{ r.roomNumber }}">
                        {% else %}
                            <div class="no-image-placeholder">No Image</div>
                        {% endif %}
                    </td>

                    <td style="color: #999;">#{{ r.id }}</td>
                    <td><strong>Unit {{ r.roomNumber }}</strong></td>
                    <td>{{ r.roomType.type }}</td>
                    <td>
                        <span class="status-pill {{ r.status|lower }}">
                            {{ r.status }}
                        </span>
                    </td>
                    <td style="text-align: right;">
                        <a class="btn-edit" href="{{ path('admin_room_edit', {'id': r.id}) }}">Edit Details</a>

                        <form method="post" action="{{ path('admin_room_delete', {'id': r.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this room?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ r.id) }}">
                            <button class="btn-delete-trigger" type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" style="text-align: center; padding: 50px; color: #999;">
                        No rooms found in the inventory.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
