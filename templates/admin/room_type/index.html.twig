{% extends 'base.html.twig' %}

{% block title %}Room Types{% endblock %}

{% block body %}
    <div class="container container-max">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h1 class="h3">Room Types</h1>
                <p class="text-muted mb-0">Manage available room types and pricing.</p>
            </div>
            <a class="btn btn-primary" href="{{ path('admin_room_type_new') }}">New Room Type</a>
        </div>

        <div class="card">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Capacity</th>
                            <th>Price</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for t in types %}
                        <tr>
                            <td>{{ t.id }}</td>
                            <td>{{ t.type }}</td>
                            <td>{{ t.capacity }}</td>
                            <td>{{ t.pricePerDay }}</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary me-2" href="{{ path('admin_room_type_edit', {'id': t.id}) }}">Edit</a>
                                <form method="post" action="{{ path('admin_room_type_delete', {'id': t.id}) }}" style="display:inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ t.id) }}">
                                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="5"><div class="empty-state">No room types yet.</div></td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
