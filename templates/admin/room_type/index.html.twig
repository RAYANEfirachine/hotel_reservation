{% extends 'base.html.twig' %}

{% block title %}Room Categories{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/room_types_list.css') }}">
{% endblock %}

{% block body %}
<div class="types-page">
    <div class="types-header">
        <div>
            <h1>Room Types</h1>
            <p style="color: #888; margin: 0;">Define your hotel's accommodation tiers and daily rates.</p>
        </div>
        <a class="btn-new-type" href="{{ path('admin_room_type_new') }}">+ Create Category</a>
    </div>

    <div class="catalog-card">
        <table class="catalog-table">
            <thead>
                <tr>
                    <th style="width: 80px;">ID</th>
                    <th>Category Tier</th>
                    <th>Guest Capacity</th>
                    <th>Daily Rate</th>
                    <th class="actions-cell">Management</th>
                </tr>
            </thead>
            <tbody>
            {% for t in types %}
                <tr>
                    <td style="color: #ccc;">#{{ t.id }}</td>
                    <td><span class="type-badge">{{ t.type }}</span></td>
                    <td><span class="capacity-pill">{{ t.capacity }} Persons</span></td>
                    <td><span class="price-text">${{ t.pricePerDay }} <small>/ Night</small></span></td>
                    <td class="actions-cell">
                        <a class="link-edit" href="{{ path('admin_room_type_edit', {'id': t.id}) }}">Edit</a>

                        <form method="post" action="{{ path('admin_room_type_delete', {'id': t.id}) }}" style="display:inline" onsubmit="return confirm('Deleting this type will affect all associated rooms. Proceed?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ t.id) }}">
                            <button class="btn-delete-link" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center; padding: 60px; color: #999;">
                        No room categories defined yet.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
