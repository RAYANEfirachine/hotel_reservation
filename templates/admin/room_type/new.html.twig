{% extends 'base.html.twig' %}

{% block title %}New Room Type{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/room_type_config2.css') }}">
{% endblock %}

{% block body %}
<div class="config-wrapper">
    <div class="config-card">
        <header class="config-header">
            <h1>Create New Category</h1>
            <p>Define a new accommodation tier and set its market value.</p>
        </header>

        <div class="config-body">
            {{ form_start(form) }}
                <div class="field-block">
                    {{ form_label(form.type, 'Type Name') }}
                    {{ form_widget(form.type, {'attr': {'placeholder': 'e.g. Presidential Suite, Deluxe...'}}) }}
                </div>

                <div class="field-block">
                    {{ form_label(form.capacity, 'Standard Occupancy') }}
                    {{ form_widget(form.capacity, {'attr': {'placeholder': 'Number of guests'}}) }}
                </div>

                <div class="field-block">
                    {{ form_label(form.pricePerDay, 'Daily Rate (USD)') }}
                    {{ form_widget(form.pricePerDay, {'attr': {'placeholder': '0.00'}}) }}
                </div>

                <div class="footer-actions">
                    <button type="submit" class="btn-save-gold">Create Category</button>
                    <a href="{{ path('admin_room_type_index') }}" class="btn-back-link">Cancel</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
