{% extends 'base.html.twig' %}

{% block title %}Payments{% endblock %}

{% block body %}
    <div class="container container-max">
        <div class="mb-3">
            <h1 class="h3">Payments</h1>
            <p class="text-muted">Recent payments and their statuses.</p>
        </div>

        <div class="card">
            <div class="card-body p-0">
                {% if payments is empty %}
                    <div class="empty-state m-4">
                        <div class="icon">ğŸ’³</div>
                        <p class="mb-0">No payments found.</p>
                    </div>
                {% else %}
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Reservation</th>
                                <th>Amount</th>
                                <th>Method</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th class="text-end"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for payment in payments %}
                                <tr>
                                    <td>{{ payment.id }}</td>
                                    <td>{{ payment.reservation.id }}</td>
                                    <td>{{ payment.amount }}</td>
                                    <td>{{ payment.paymentMethod }}</td>
                                    <td>{{ payment.paymentStatus }}</td>
                                    <td>{{ payment.paymentDate ? payment.paymentDate|date('Y-m-d H:i') : '-' }}</td>
                                    <td class="text-end"><a href="{{ path('admin_payment_show', {id: payment.id}) }}" class="btn btn-sm btn-outline-primary">View</a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
