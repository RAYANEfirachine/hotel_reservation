<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="" crossorigin="anonymous">
            <link rel="stylesheet" href="/assets/styles/app.css">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <span class="brand-logo me-2">üè®</span>
                    <span class="brand-title">Hotel</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('admin_room_index') }}">Rooms</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('admin_room_type_index') }}">Room Types</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('admin_payment_index') }}">Payments</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('admin_room_index') }}">Reservations</a></li>
                        {% elseif is_granted('ROLE_CLIENT') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('client_room_index') }}">Rooms</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('client_booking_my_bookings') }}">My Bookings</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Profile</a></li>
                        {% endif %}
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        {% if app.user %}
                            <li class="nav-item me-2"><a class="nav-link text-light" href="#">{{ app.user.email }}</a></li>
                            <li class="nav-item"><a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Logout</a></li>
                        {% else %}
                            <li class="nav-item me-2"><a class="btn btn-light btn-sm" href="{{ path('app_login') }}">Login</a></li>
                            <li class="nav-item"><a class="btn btn-outline-light btn-sm" href="{{ path('app_register') }}">Register</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </body>
</html>
