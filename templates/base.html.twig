        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap">

        <style>
            :root {
                --primary-gold: #c5a059;
                --dark-bg: #1a1a1a;
                --text-gray: #666;
                --white: #ffffff;
                --soft-bg: #fdfdfb;
                --transition: all 0.3s ease;
            }

            body {
                margin: 0;
                padding: 0;
                font-family: 'Plus Jakarta Sans', sans-serif;
                background-color: var(--soft-bg);
                color: var(--dark-bg);
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            main { flex: 1; }

            /* Navbar Styling */
            .navbar {
                background: var(--white);
                padding: 1rem 2rem;
                box-shadow: 0 2px 15px rgba(0,0,0,0.05);
                position: sticky;
                top: 0;
                z-index: 1000;
            }

            .navbar__wrapper {
                max-width: 1200px;
                margin: 0 auto;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .navbar__brand {
                font-family: 'Playfair Display', serif;
                font-size: 1.5rem;
                text-decoration: none;
                color: var(--dark-bg);
                font-weight: 700;
            }

            .navbar__nav {
                list-style: none;
                display: flex;
                gap: 2rem;
                margin: 0;
                padding: 0;
            }

            .navbar__link {
                text-decoration: none;
                color: var(--text-gray);
                font-weight: 500;
                font-size: 0.9rem;
                transition: var(--transition);
            }

            .navbar__link:hover { color: var(--primary-gold); }

            .navbar__actions {
                display: flex;
                align-items: center;
                gap: 1rem;
            }

            /* Buttons */
            .btn {
                padding: 0.6rem 1.2rem;
                border-radius: 8px;
                text-decoration: none;
                font-weight: 600;
                font-size: 0.85rem;
                transition: var(--transition);
                cursor: pointer;
                border: none;
            }

            .btn--primary { background: var(--dark-bg); color: var(--white); }
            .btn--primary:hover { background: var(--primary-gold); }

            .btn--outline {
                border: 1px solid #ddd;
                color: var(--text-gray);
                background: transparent;
            }
            .btn--outline:hover { border-color: var(--primary-gold); color: var(--primary-gold); }

            /* Alerts */
            .alert {
                padding: 1rem;
                margin: 1rem auto;
                max-width: 1200px;
                border-radius: 10px;
                text-align: center;
            }
            .alert--success { background: #e7f5ea; color: #2d8a39; }
            .alert--danger { background: #fff5f5; color: #dc2626; }

            /* Footer Styling */
            footer {
                background: var(--dark-bg);
                color: var(--white);
                padding: 4rem 2rem 2rem;
                margin-top: 4rem;
            }

            .footer__wrapper { max-width: 1200px; margin: 0 auto; }

            .footer__content {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 3rem;
                margin-bottom: 3rem;
            }

            .footer__section h5 {
                font-family: 'Playfair Display', serif;
                color: var(--primary-gold);
                font-size: 1.2rem;
                margin-bottom: 1.5rem;
            }

            .footer__link {
                display: block;
                color: rgba(255,255,255,0.6);
                text-decoration: none;
                margin-bottom: 0.8rem;
                font-size: 0.9rem;
                transition: var(--transition);
            }

            .footer__link:hover { color: var(--white); }

            .footer__divider {
                border-top: 1px solid rgba(255,255,255,0.1);
                padding-top: 2rem;
                text-align: center;
                font-size: 0.8rem;
                color: rgba(255,255,255,0.4);
            }
        </style>

        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar">
            <div class="navbar__wrapper">
                <a href="{{ path('app_home') }}" class="navbar__brand">
                    üè® LuxeStay
                </a>

                <ul class="navbar__nav">
                    <li><a href="{{ path('app_home') }}" class="navbar__link">Home</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin_room_index') }}" class="navbar__link">Rooms</a></li>
                        <li><a href="{{ path('admin_reservation_index') }}" class="navbar__link">Reservations</a></li>
                        <li><a href="{{ path('admin_room_type_index') }}" class="navbar__link">Categories</a></li>
                    {% elseif is_granted('ROLE_CLIENT') %}
                        <li><a href="{{ path('client_room_index') }}" class="navbar__link">Browse Rooms</a></li>
                        <li><a href="{{ path('client_booking_new') }}" class="navbar__link">Book Now</a></li>
                    {% endif %}
                </ul>

                <div class="navbar__actions">
                    {% if app.user %}
                        <span style="color: var(--text-gray); font-size: 0.8rem;">{{ app.user.email }}</span>
                        <a href="{{ path('app_logout') }}" class="btn btn--outline">Logout</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn--outline">Login</a>
                        <a href="{{ path('app_register') }}" class="btn btn--primary">Register</a>
                    {% endif %}
                </div>
            </div>
        </nav>

        <main>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert--{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <footer>
            <div class="footer__wrapper">
                <div class="footer__content">
                    <div class="footer__section">
                        <h5>About LuxeStay</h5>
                        <p>Experience world-class luxury hotel reservations. We provide seamless access to the finest accommodations globally.</p>
                    </div>
                    <div class="footer__section">
                        <h5>Quick Links</h5>
                        <a href="{{ path('app_home') }}" class="footer__link">Home</a>
                        <a href="{{ path('client_room_index') }}" class="footer__link">Browse Rooms</a>
                        <a href="#" class="footer__link">Contact Us</a>
                    </div>
                    <div class="footer__section">
                        <h5>Legal</h5>
                        <a href="#" class="footer__link">Help Center</a>
                        <a href="#" class="footer__link">Privacy Policy</a>
                        <a href="#" class="footer__link">Terms of Service</a>
                    </div>
                </div>
                <div class="footer__divider">
                    <p>&copy; {{ "now"|date("Y") }} LuxeStay. All rights reserved. Premium Accommodations Worldwide.</p>
                </div>
            </div>
        </footer>
    </body>
</html>
