{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstName) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.birthDate) }}
        {{ form_row(registrationForm.identityType) }}
        {{ form_row(registrationForm.identityNumber) }}
        <button class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}

    <p>Already have an account? <a href="{{ path('app_login') }}">Login</a></p>
{% endblock %}
