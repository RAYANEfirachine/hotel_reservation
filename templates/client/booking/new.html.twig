{% extends 'base.html.twig' %}

{% block title %}New Reservation{% endblock %}

{% block body %}
    <div class="container container-max d-flex justify-content-center">
        <div class="card w-100" style="max-width:720px">
            <div class="card-body">
                <h1 class="h4 mb-3">New Reservation</h1>
                {{ form_start(form) }}
                    <div class="mb-3">{{ form_row(form.room) }}</div>
                    <div class="mb-3 d-md-flex gap-3">
                        <div class="flex-fill">{{ form_row(form.checkInDate) }}</div>
                        <div class="flex-fill">{{ form_row(form.checkOutDate) }}</div>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary">Reserve</button>
                        <a class="btn btn-outline-secondary" href="{{ path('client_room_index') }}">Back</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
