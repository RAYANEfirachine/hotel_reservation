{% extends 'base.html.twig' %}

{% block title %}My Bookings | The Royal Sovereign{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/client_bookings.css') }}">
{% endblock %}

{% block body %}
<div class="bookings-page">
    <div class="bookings-container">

        <header class="page-header">
            <h1>My Bookings</h1>
            <p>Your journey with us, past and present.</p>
        </header>

        <div class="bookings-card">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Reservation</th>
                        <th>Room Unit</th>
                        <th>Check-in</th>
                        <th>Check-out</th>
                        <th>Status</th>
                        <th style="text-align: right;">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for r in reservations %}
                        <tr>

                            <td><span class="res-number">#{{ r.id }}</span></td>
                            <td><span class="room-id">Unit {{ r.room.roomNumber }}</span></td>
                            <td>{{ r.checkInDate|date('d M Y') }}</td>
                            <td>{{ r.checkOutDate|date('d M Y') }}</td>
                            <td>
                                {# تحسين عرض الـ Badge بناءً على الحالة #}
                                <span class="status-badge status-{{ r.status|lower }}">
                                    {{ r.status }}
                                </span>
                            </td>
                            <td style="text-align: right;">
                                {% if r.status != 'cancelled' %}
                                    <form method="post" action="{{ path('client_booking_cancel', {'id': r.id}) }}" onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ r.id) }}">
                                        <button class="btn-cancel-action">Cancel Stay</button>
                                    </form>
                                {% else %}
                                    <span style="font-size: 11px; color: #ccc; font-style: italic;">No actions available</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">
                                <div class="empty-state">
                                    <p>You haven't made any reservations yet.</p>
                                    <a href="/" style="color: var(--gold); text-decoration: none; font-weight: 600;">Start exploring our rooms</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

