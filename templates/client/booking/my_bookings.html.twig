{% extends 'base.html.twig' %}

{% block title %}My Bookings{% endblock %}

{% block body %}
    <div class="container container-max">
        <div class="mb-3">
            <h1 class="h3">My Bookings</h1>
            <p class="text-muted">Your upcoming and past reservations.</p>
        </div>

        <div class="card">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Reservation</th>
                            <th>Room</th>
                            <th>Check-in</th>
                            <th>Check-out</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for r in reservations %}
                            <tr>
                                <td>#{{ r.id }}</td>
                                <td>{{ r.room.roomNumber }}</td>
                                <td>{{ r.checkInDate|date('Y-m-d') }}</td>
                                <td>{{ r.checkOutDate|date('Y-m-d') }}</td>
                                <td>
                                    <span class="badge bg-{{ r.status == 'cancelled' ? 'danger' : (r.status == 'confirmed' ? 'success' : 'secondary') }}">{{ r.status }}</span>
                                </td>
                                <td class="text-end">
                                    <form method="post" action="{{ path('client_booking_cancel', {'id': r.id}) }}" onsubmit="return confirm('Cancel reservation?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ r.id) }}">
                                        <button class="btn btn-sm btn-outline-danger">Cancel</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="6"><div class="empty-state">You have no bookings yet.</div></td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
