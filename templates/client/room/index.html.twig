{% extends 'base.html.twig' %}

{% block title %}Available Rooms{% endblock %}

{% block body %}
    <div class="container container-max">
        <div class="mb-3">
            <h1 class="h3">Available Rooms</h1>
            <p class="text-muted">Browse available rooms and book your stay.</p>
        </div>

        <div class="row g-3">
            {% for r in rooms %}
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="card-title mb-1">Room {{ r.roomNumber }}</h5>
                                    <div class="text-muted small">{{ r.roomType.type }} ¬∑ Sleeps {{ r.roomType.capacity }}</div>
                                </div>
                                <div class="text-end">
                                    <div class="h5 mb-1">${{ r.roomType.pricePerDay }}</div>
                                </div>
                            </div>
                            <p class="card-text text-muted mb-3">Comfortable room with essential amenities.</p>
                            <div class="mt-auto">
                                <a href="{{ path('client_booking_new') }}" class="btn btn-primary w-100">Book</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="empty-state">
                        <div class="icon">üè®</div>
                        <p class="mb-0">No rooms available.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
