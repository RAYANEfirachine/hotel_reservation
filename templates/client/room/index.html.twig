{% extends 'base.html.twig' %}

{% block title %}Available Rooms - LuxeStay{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/available_rooms.css') }}">
{% endblock %}

{% block body %}
<div class="rooms-gallery">
    <header class="gallery-header">
        <h1>Available Rooms</h1>
        <p>Explore our selection of premium suites and rooms</p>
    </header>

    <div class="room-grid">
        {% for r in rooms %}
            <article class="room-card">
                <div class="price-tag">
                    ${{ r.roomType.pricePerDay }} <span>/ night</span>
                </div>

                <div class="room-card-body">
                    <span class="room-type-label">{{ r.roomType.type }}</span>
                    <h2 class="room-title">Room {{ r.roomNumber }}</h2>

                    <div class="room-features">
                        <p>Accommodates up to {{ r.roomType.capacity }} guests. Experience refined comfort with our premium bedding and signature amenities.</p>
                    </div>

                    <a href="{{ path('client_booking_new') }}" class="btn-book">Book This Room</a>
                </div>
            </article>
        {% else %}
            <div class="empty-gallery">
                <span class="icon">üè®</span>
                <h3>No Rooms Available</h3>
                <p>We are currently fully booked. Please check back later or contact us for assistance.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
