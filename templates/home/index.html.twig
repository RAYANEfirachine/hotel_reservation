{% extends 'base.html.twig' %}

{% block title %}Welcome to Hotel{% endblock %}

{% block body %}
    <div class="container container-max">
        <section class="py-5 text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="display-5 fw-bold">Hotel</h1>
                    <p class="lead text-muted">Comfort and service for your perfect stay.</p>

                    {% include '_partials/cta.html.twig' %}
                </div>
            </div>
        </section>

        <section class="py-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Comfortable Rooms</h5>
                            <p class="card-text text-muted">Well-appointed rooms designed for rest and productivity.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Exceptional Service</h5>
                            <p class="card-text text-muted">Friendly staff ready to assist 24/7.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Great Location</h5>
                            <p class="card-text text-muted">Close to local attractions and transport links.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
